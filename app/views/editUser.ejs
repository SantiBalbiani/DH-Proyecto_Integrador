  <body>
    <%- include('../partials/nav'); %> 
    <%- include('../partials/searchBar'); %>
<!-- main-content -->

<form action="/users/<%= elUser.id %>/edit?_method=PUT" enctype="multipart/form-data" method="POST" ></form>
        <h2 class="products-title"> <%= title2 %> </h2>
       
        <h5 class="products-title"> <%= msg %> </h5>
        
        <section class="product-box">
            <div class="editarCampo">
                <div>
                <label>Nombre de Usuario:</label>
                <input type="text" name="nombre" value="<%= elUser.nombre %>" >
                </div>
                <div>
                <label>Apellido:</label>
                <input type="text" name="apellido" value="<%= elUser.apellido %>">
                </div>
                <div>
                <label>Email:</label>
                <input type="text" name="email" value="<%= elUser.email %>">
                </div>

                <div>
                <label>Imagen Actual:</label>
                <img src="/images/users/<%= elUser.image %>">
                

                <div class="form-group col"> <label for="imageUpload" class="btn btn-primary btn-block btn-outlined">Carg√° tu nueva imagen</label>
                    <input type="file" id="imageUpload" accept="image/*" style="display: none">
                </div>
                </div>

            </div>
        </section>
        
        <button type="submit">Guardar Usuario</button>
                
    </form> 
    
