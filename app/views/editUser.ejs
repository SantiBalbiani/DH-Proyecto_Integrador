<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel='stylesheet' href='/stylesheets/styleProductDetailOk.css' />
        <link rel='stylesheet' href='/stylesheets/userForm.css' />
  </head>
  
  <body>
    <%- include('../partials/nav'); %> 
    <%- include('../partials/searchBar'); %>
<!-- main-content -->

<form action="/users/<%= elUser.id %>/edit?_method=PUT" enctype="multipart/form-data" method="POST" >
        <h2 class="products-title"> <%= title2 %> </h2>
       
        <h5 class="products-title"> <%= msg %> </h5>
        
        <section class="product-box">
            <div class="editarCampo">
                <div>
                  <label>Nombre:</label>
                  <input type="text" name="nombre" value="<%= elUser.nombre %>" >
                </div>
                <div>
                  <label>Apellido:</label>
                  <input type="text" name="apellido" value="<%= elUser.apellido %>">
                </div>
                <div>
                  <label>Genéro:</label>
                  <input type="text" name="genero" value="<%= elUser.genero%>">
                </div>
                <div>
                  <br>
                  <p><select id="inputState" class="form-control">
                    <option selected>Tipo de Documento</option>
                    <option>DNI</option>
                    <option>Libreta</option>
                    <option>Pasaporte</option>
                  </select></p>
                  <label>N° de Documento:</label>
                  <input type="text" name="numeroDoc" value="<%= elUser.numeroDoc%>">
                </div>
                <div>
                  <label>Email:</label>
                  <input type="text" name="email" value="<%= elUser.email %>">
                </div>
                <div>
                  <label>Teléfono:</label>
                  <input type="text" name="telefono" value="<%= elUser.telefono%>">
                </div>
                <div>
                  <label>Teléfono alternativo:</label>
                  <input type="text" name="telefono2" value="<%= elUser.telefono2%>">
                </div>
                <div>
                  <br>
                  <h5>Domicilio</h5>
                  <label>Calle y Número </label>
                  <input type="text" name="calle" value="<%= elUser.calle%>">
                </div>

                <div>
                  <label>Ciudad</label>
                  <input type="text" name="city" value="<%= elUser.city%>">
                </div>

                <div>
                  <label>CP</label>
                  <input type="text" name="cp" value="<%= elUser.cp%>">
                </div>

                <div>
                  <label>Provincia</label>
                  <input type="text" name="provincia" value="<%= elUser.provincia%>">
                </div>

                <div>
                  <br>
                  <h5>Datos de ingreso</h5>
                  <label>Usuario</label>
                  <input type="text" name="nombreUsuario" value="<%= elUser.nombreUsuario%>">

                  <label>Contraseña</label>
                  <input type="password" name="contrasena" value="">
                </div>


                <div>
                  <br>
                  <h5>Datos de Vendedor</h5>
                  <label>Usuario</label>
                  <input type="text" name="nomVendedor" value="<%= elUser.nomVendedor%>">
                </div>

                <div class="imagenActualUsuario">
                  <label>Imagen Actual:</label>
                  <img src="/images/users/<%= elUser.image %>">
                </div>

                <div class="form-group col"> <label for="imageUpload" class="btn btn-outline-primary">Cargá tu nueva imagen</label>
                 <input type="file" id="imageUpload" name="image" accept="images/*" style="display: none">
                </div>
                

            </div>
        </section>

        <div class="form-group col"> <button type="submit" class="btn btn-success">Guardar Usuario</button>
        </div>

</form>
    <form  action="/users/<%= elUser.id %>?_method=DELETE" method="POST" >
    <div class="form-group col"> <button type="DELETE" class="btn btn-danger">Borrar Usuario </button>  
    </div>
   </form>
            
 <!-- pie -->
<%- include('../partials/footer'); %>
</body>
</html>