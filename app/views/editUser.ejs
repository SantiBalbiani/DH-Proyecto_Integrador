<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %> 
    <link rel='stylesheet' href='/stylesheets/styleProductDetailOk.css' />
  </head>
  
  <body>
    <%- include('../partials/nav'); %> 
    <%- include('../partials/searchBar'); %>
<!-- main-content -->

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title"> <%= title2 %> </h2>
        </div>

    
        <div class="col-12 col-sm-6 col-lg-3">
           
            <section class="product-box">
                <form action="/users/<%= elUser.id %>/edit?_method=PUT" enctype="multipart/form-data" method="POST" >
                    <div>
                        <label>Nombre de Usuario:</label>
                      
                        <input type="text" name="nombre" value="<%= elUser.nombre %>" >
                    </div>
                    <div>
                        <label>Apellido:</label>
                        <input type="text" name="apellido" value="<%= elUser.apellido %>">
                    </div>
                    <div>
                        <label>Email:</label>
                        <input type="text" name="email" value="<%= elUser.email %>">
                    </div>
                  <!--   <div>
                        <label>Descuento:</label>
                        <input type="text" name="discount" value="">
                    </div> -->
                    <div>
                        <label>Imagen Actual:</label>
                        <img src="/images/users/<%= elUser.image %>">
                    </div>
                    <div>
                        <label>Avatar del usuario:</label>
                        <input type="file" name="image">
                    </div>
                    <button type="submit">Guardar Usuario</button>
                </form>

                <form  action="/users/<%= elUser.id %>?_method=DELETE" method="POST" >
                    <button type="submit">Borrar Usuario</button>
                
                </form>
            </section>
            
        </div>
        <h5 class="products-title"> <%= msg %> </h5>
    </div>
</div>

</div>

</section>


    <!-- pie -->
<%- include('../partials/footer'); %>

</body>
</html>